echo.
echo ========================================
echo   MYSQL SETUP COMPLETED SUCCESSFULLY!
echo ========================================
echo.
echo ‚úÖ MySQL: %MYSQL_VERSION%
echo ‚úÖ Connection: Successful
echo ‚úÖ Database: student_lab_system created
echo ‚úÖ Schema: Tables and indexes created
echo ‚úÖ Configuration: db-config.js created
echo ‚úÖ Tests: All passed
echo ‚úÖ Performance: Optimized
echo.
echo Your MySQL setup is complete and optimized!
echo The system will automatically use these settings when it starts.
echo.
echo Database Information:
echo   Host: localhost
echo   Database: student_lab_system
echo   User: %mysql_user%
echo   Charset: utf8mb4
echo   Engine: InnoDB
echo.
echo Tables Created:
echo   - students (main student data)
echo   - student_sessions (entry/exit tracking)
echo   - system_logs (system logging)
echo   - backup_records (backup tracking)
echo.

set /p test_connection="Test database connection one more time? (y/n): "
if /i "%test_connection%"=="y" (
    echo.
    echo üß™ Running final connection test...
    cd /d "%~dp0..\..\..\System\server"
    node -e "const mysql=require('mysql2/promise');const config=require('./db-config.js');mysql.createConnection(config).then(conn=>{console.log('‚úÖ Final test passed!');conn.end();process.exit(0);}).catch(err=>{console.error('‚ùå Final test failed:',err.message);process.exit(1);});"
    if %errorlevel% neq 0 (
